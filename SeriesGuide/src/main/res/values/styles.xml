<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">

    <!-- Text styles -->
    <style name="TextAppearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:textSize">@dimen/text_size_default_sg</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily" tools:targetApi="jelly_bean">sans-serif</item>
    </style>

    <style name="TextAppearance.Light">
        <item name="android:fontFamily" tools:targetApi="jelly_bean">sans-serif-light</item>
    </style>

    <style name="TextAppearance.Tab">
        <item name="android:textColor">?android:attr/textColorSecondary</item>
        <item name="android:textSize">@dimen/text_size_default_sg</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="TextAppearance.Display3">
        <item name="android:textColor">?android:attr/textColorSecondary</item>
        <item name="android:textSize">56sp</item>
    </style>

    <style name="TextAppearance.Display1">
        <item name="android:textColor">?android:attr/textColorSecondary</item>
        <item name="android:textSize">34sp</item>
    </style>

    <style name="TextAppearance.Display1.White">
        <item name="android:textColor">@color/black_11</item>
    </style>

    <style name="TextAppearance.Headline">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="TextAppearance.Title">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TextAppearance.Subhead">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextAppearance.Body">
        <item name="android:textSize">@dimen/text_size_default_sg</item>
    </style>

    <style name="TextAppearance.Caption">
        <item name="android:textColor">?android:attr/textColorSecondary</item>
        <item name="android:textSize">@dimen/text_size_caption_sg</item>
    </style>

    <style name="TextAppearance.Menu">
        <item name="android:textSize">@dimen/text_size_default_sg</item>
    </style>

    <style name="TextAppearance.Button">
        <item name="android:textSize">@dimen/text_size_default_sg</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="TextAppearance.Subhead.Dim">
        <item name="android:textColor">?android:attr/textColorSecondary</item>
    </style>

    <style name="TextAppearance.Subhead.Green">
        <item name="android:textColor">?attr/sgTextColorGreen</item>
    </style>

    <style name="TextAppearance.Subhead.Narrow">
        <item name="android:fontFamily" tools:targetApi="jelly_bean">sans-serif-condensed</item>
    </style>

    <style name="TextAppearance.Body.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.Body.Dim">
        <item name="android:textColor">?android:attr/textColorSecondary</item>
    </style>

    <style name="TextAppearance.Body.White">
        <item name="android:textColor">@color/black_11</item>
    </style>

    <style name="TextAppearance.Body.Highlight">
        <item name="android:textStyle">italic</item>
    </style>

    <style name="TextAppearance.Body.Highlight.Accent">
        <item name="android:textColor">?attr/colorAccent</item>
    </style>

    <style name="TextAppearance.Body.Highlight.Red">
        <item name="android:textColor">@color/text_red</item>
    </style>

    <style name="TextAppearance.Caption.Dim">
        <item name="android:textColor">?attr/sgTextColorSecondaryDim</item>
    </style>

    <style name="TextAppearance.Caption.Narrow">
        <item name="android:fontFamily" tools:targetApi="jelly_bean">sans-serif-condensed</item>
    </style>

    <style name="TextAppearance.Caption.Narrow.Dim">
        <item name="android:textColor">?attr/sgTextColorSecondaryDim</item>
    </style>

    <style name="TextAppearance.Caption.Red">
        <item name="android:textColor">@color/text_red</item>
    </style>

    <!-- Widget styles -->
    <style name="Widget" />

    <style name="Widget.SeriesGuide" parent="Widget" />

    <!-- Buttons -->
    <!-- Has no background, so use theme text color -->
    <style name="Widget.SeriesGuide.Button.Borderless" parent="Base.Widget.AppCompat.Button">
        <item name="android:background">?attr/sgBorderlessButtonBackground</item>
        <item name="android:maxLines">2</item>
    </style>

    <style name="Widget.SeriesGuide.Button.Borderless.Default">
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">center_vertical|start</item>
        <item name="android:fontFamily" tools:ignore="NewApi">sans-serif</item>
    </style>

    <style name="Widget.SeriesGuide.Button.Borderless.Blue">
        <item name="android:textColor">@color/text_blue</item>
    </style>

    <style name="Widget.SeriesGuide.Button.Borderless.Accent">
        <item name="android:textColor">?attr/colorAccent</item>
    </style>

    <style name="Widget.SeriesGuide.Button.Borderless.Caption">
        <item name="android:padding">4dp</item>
        <item name="android:textSize">@dimen/text_size_caption_sg</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">?android:attr/textColorSecondary</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
    </style>

    <style name="Widget.SeriesGuide.Button.Borderless.Caption.Platform">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Widget.SeriesGuide.Button.Borderless.Rating">
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:padding">@dimen/default_padding</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Widget.SeriesGuide.ButtonBar">
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">end</item>
    </style>

    <!-- Progress bar -->
    <style name="Widget.SeriesGuide.ProgressBar" parent="android:Widget.Holo.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_horizontal_sg</item>
        <item name="android:indeterminateDrawable">@drawable/progress_indeterminate_horizontal_sg</item>
    </style>

    <!-- Smooth Progress Bar -->
    <style name="Widget.SeriesGuide.SmoothProgressBar" parent="SmoothProgressBar">
        <item name="android:indeterminate">true</item>
        <item name="spb_sections_count">4</item>
        <item name="spb_speed">1.0</item>
        <item name="spb_colors">?attr/colorsProgressBar</item>
        <item name="spb_stroke_width">4dp</item>
        <item name="spb_stroke_separator_length">0dp</item>
        <item name="spb_reversed">false</item>
        <item name="spb_mirror_mode">false</item>
        <item name="spb_interpolator">spb_interpolator_linear</item>
    </style>

    <style name="Widget.SeriesGuide.SmoothProgressBar.Sync">
        <item name="spb_speed">0.7</item>
        <item name="spb_stroke_width">2dp</item>
        <item name="spb_interpolator">spb_interpolator_accelerate</item>
    </style>

    <!-- TextView -->
    <style name="Widget.SeriesGuide.TextView" />

    <style name="Widget.SeriesGuide.TextView.Body">
        <item name="android:lineSpacingMultiplier">1.25</item>
    </style>

    <style name="Widget.SeriesGuide.TextView.ShowLabels">
        <item name="android:layout_marginLeft">@dimen/default_padding</item>
        <item name="android:layout_marginRight">@dimen/default_padding</item>
        <item name="android:layout_marginTop">@dimen/default_padding</item>
        <item name="android:textIsSelectable">true</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">marquee</item>
    </style>

    <!-- Action bar -->
    <style name="Widget.SeriesGuide.ActionBar" />

    <!-- Tabs -->
    <style name="Widget.SeriesGuide.TabLayout">
        <item name="android:background">?attr/colorPrimary</item>
    </style>

    <style name="Widget.SeriesGuide.Tab">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">@dimen/tab_padding_horizontal</item>
        <item name="android:paddingRight">@dimen/tab_padding_horizontal</item>
    </style>

    <!-- Dialogs -->
    <style name="Widget.SeriesGuide.DialogWindowTitle">
        <item name="android:maxLines">1</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:textAppearance">@style/TextAppearance.Headline</item>
        <item name="android:minHeight">64dip</item>
        <item name="android:paddingLeft">16dip</item>
        <item name="android:paddingRight">16dip</item>
    </style>

    <style name="Animation.CheckinDialog" parent="android:Animation.Dialog">
        <item name="android:windowExitAnimation">@anim/checkin_dialog_exit</item>
    </style>

    <!-- Grid views with cards -->
    <!-- The support CardView adds padding for compat shadows on pre-v21, adjust accordingly. -->
    <!-- Note: Ripple breaks when setting selector on item instead of the List/GridView. -->
    <style name="Widget.SeriesGuide.CardGrid">
        <item name="android:listSelector">?attr/selectableItemBackground</item>
        <item name="android:drawSelectorOnTop">true</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:paddingTop">@dimen/grid_topbottom_padding</item>
        <item name="android:paddingBottom">@dimen/grid_topbottom_padding</item>
        <item name="android:paddingLeft">@dimen/grid_leftright_padding</item>
        <item name="android:paddingRight">@dimen/grid_leftright_padding</item>
        <item name="android:scrollbarStyle">outsideOverlay</item>
        <item name="android:horizontalSpacing">@dimen/grid_horizontal_spacing</item>
        <item name="android:verticalSpacing">@dimen/grid_vertical_spacing</item>
    </style>

    <!-- Easy layouting -->
    <style name="DefaultPadding" />

    <style name="DefaultPadding.List">
        <item name="android:paddingTop">@dimen/default_padding</item>
        <item name="android:paddingBottom">@dimen/default_padding</item>
        <item name="android:divider">@color/transparent</item>
        <item name="android:dividerHeight">0dp</item>
        <item name="android:clipToPadding">false</item>
    </style>

    <style name="DefaultPadding.Blocks">
        <item name="android:paddingLeft">@dimen/default_padding</item>
        <item name="android:paddingRight">@dimen/default_padding</item>
    </style>

    <style name="DefaultPadding.DialogContent">
        <item name="android:paddingLeft">@dimen/larger_padding</item>
        <item name="android:paddingTop">@dimen/larger_padding</item>
        <item name="android:paddingRight">@dimen/larger_padding</item>
    </style>

    <style name="Block">
        <item name="android:layout_marginLeft">24dp</item>
        <item name="android:layout_marginRight">24dp</item>
    </style>

    <style name="Block.WithTopMargin">
        <item name="android:layout_marginTop">@dimen/large_padding</item>
        <item name="android:layout_marginBottom">@dimen/inline_padding</item>
    </style>

    <style name="Block.FlowText">
        <item name="android:lineSpacingMultiplier">1.25</item>
    </style>

    <style name="Page">
        <item name="android:padding">@dimen/large_padding</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="Page.Centered"/>

    <!-- Widget items -->
    <style name="WidgetTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">11sp</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="FirstRunColumn">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- Panes -->
    <style name="EpisodesPane">
        <item name="android:layout_weight">1</item>
    </style>

    <style name="DetailsPane">
        <item name="android:layout_weight">1</item>
    </style>

    <!-- ////////////////////////////////////////////// -->

    <!-- Dark styles -->

    <!-- ////////////////////////////////////////////// -->


    <!-- Light styles -->

    <!-- Progress bar -->
    <style name="Widget.SeriesGuide.ProgressBar.Light" parent="android:Widget.Holo.Light.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_horizontal_sg_light</item>
        <item name="android:indeterminateDrawable">@drawable/progress_indeterminate_horizontal_sg</item>
    </style>

</resources>
